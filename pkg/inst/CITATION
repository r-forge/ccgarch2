citHeader("To cite package ccgarch2 in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("ccgarch2")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version ", meta$Version, ", URL <http://CRAN.r-project/package=ccgarch>.", sep="")

citEntry(
 entry ="Manual",
 title = "ccgarch2: An R Package for Modelling Multivariate GARCH Models with
         Conditional Correlations",
 author = personList(as.person("Tomoaki Nakatani")),
 year = year,
 note = vers,
 textVersion =
         paste("Tomoaki Nakatani (",
               year,
               "). ccgarch2: An R Package for Modelling Multivariate GARCH Models with Conditional Correlations, ",
               vers, sep="")
)
